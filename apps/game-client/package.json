{
    "name": "t5c",
    "version": "0.4.1",
    "repository": {
        "url": "git+https://github.com/orion3dgames/t5c.git"
    },
    "description": "Building a basic multiplayer 3d top down rpg using babylon.js and colyseus",
    "main": "./dist/client/index.html",
    "type": "module",
    "scripts": {
        "client-dev": "bun run vite",
        "client-start": "bun run vite",
        "client-build": "bun run vite build",
        "client-preview": "bun run vite preview",
        "server-debug": "tsx --inspect src/server/index.ts",
        "server-dev": "tsx src/server/index.ts",
        "server-start": "bun src/server/index.ts",
        "server-build": "tsc && cp -r public dist",
        "loadtest": "npx tsx loadtest/test.ts --room game_room --numClients 10 --endpoint ws://localhost:3000",
        "docker:build": "docker build -t degen-server:dev -f Dockerfile ../../ # DEV ONLY - Production builds should be handled by CircleCI",
        "docker:tag": "docker tag degen-server:dev registry.digitalocean.com/pioneer/degen-server:dev # DEV ONLY - Not for production use",
        "docker:run": "docker run --env-file=../../.env degen-server:dev # For local testing only",
        "docker:push": "echo 'DEPRECATED: Production Docker images should only be built and pushed by CircleCI'",
        "docker:push:all": "echo 'DEPRECATED: Production Docker images should only be built and pushed by CircleCI'"
    },
    "author": "Orion3d",
    "license": "MIT",
    "devDependencies": {
        "@babylonjs/gui-editor": "7.32.3",
        "@babylonjs/inspector": "7.32.3",
        "@babylonjs/materials": "7.32.3",
        "@colyseus/core": "^0.15.39",
        "@colyseus/loadtest": "^0.15.2",
        "@colyseus/monitor": "^0.15.6",
        "@colyseus/schema": "^2.0.32",
        "@colyseus/ws-transport": "^0.15.2",
        "@types/node": "^20.17.24",
        "@types/qs": "^6.9.12",
        "@types/react": "^18.3.2",
        "@types/react-dom": "^18.3.0",
        "axios": "^1.7.1",
        "dotenv": "^16.4.7",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.19.3",
        "typescript": "^5.4.5",
        "vite": "^6.2.2"
    },
    "dependencies": {
        "@babylonjs/core": "7.32.3",
        "@babylonjs/gui": "7.32.3",
        "@babylonjs/loaders": "7.32.3",
        "@babylonjs/serializers": "7.32.3",
        "babylonjs-gltf2interface": "7.32.3",
        "colyseus": "^0.15.17",
        "colyseus.js": "^0.15.19",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "fs-extra": "^11.2.0",
        "mysql2": "^3.10.2",
        "nanoid": "^3.0.0",
        "qs": "^6.12.0",
        "sqlite3": "^5.1.7",
        "winston": "^3.13.0"
    },
    "browserslist": {
        "production": [
            "> 5%"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
