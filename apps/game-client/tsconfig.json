{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "./dist/server",
        "strict": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowJs": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        },
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "strictNullChecks": false
    },
    "include": ["src/server/*", "src/**/*.d.ts", "src/shared/**/*.ts", "src/shared/**/*.js"],
    "exclude": ["node_modules", "**/*.spec.js"]
}
