{
  "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
  "outputDirectory": "dist/client",
  "installCommand": "echo 'Skipping default install - using Bun instead'",
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)\\.js", "destination": "/$1.js" },
    { "source": "/(.*)\\.css", "destination": "/$1.css" },
    { "source": "/(.*)\\.png", "destination": "/$1.png" },
    { "source": "/(.*)\\.jpg", "destination": "/$1.jpg" },
    { "source": "/(.*)\\.svg", "destination": "/$1.svg" },
    { "source": "/(.*)\\.json", "destination": "/$1.json" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "unsafe-none"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 