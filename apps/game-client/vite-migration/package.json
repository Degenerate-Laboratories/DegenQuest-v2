        "@colyseus/loadtest": "^0.15.2",
        "@colyseus/monitor": "^0.15.6",
        "@colyseus/schema": "^2.0.32",
        "@colyseus/ws-transport": "^0.15.2",
        "@types/node": "^20.12.12",
        "@types/qs": "^6.9.12",
        "@types/react": "^18.3.2",
        "@types/react-dom": "^18.3.0",
        "axios": "^1.7.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.5",
        "vite": "^5.1.4",
        "dotenv": "^16.4.5"
    },
